{
  "compilerOptions": {
    "baseUrl": ".", // This is important for relative paths
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@styles/*": ["src/styles/*"],
      "@root/*": ["src/*"],
      "@context/*": ["src/context/*"],
      "@controllers/*": ["src/controllers/*"],
      "@tests/*": ["src/tests/*"]
    },
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "outDir": "./.tsc-out",
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": false,
    "types": ["jest", "@testing-library/jest-dom", "./src/types/cssModules", "vite/client", "node"]
  },
  "include": ["src/**/*", "jest.setup.ts", "vite.config.ts"],
  "exclude": ["node_modules"]
}
